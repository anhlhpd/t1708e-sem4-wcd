<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>PublisherController</servlet-name>
        <servlet-class>pubsub.demo.controller.PublisherController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PublisherController</servlet-name>
        <url-pattern>/publisher/publish</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SubscriberController</servlet-name>
        <servlet-class>pubsub.demo.controller.SubsciberController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubscriberController</servlet-name>
        <url-pattern>/subsciber/subscribe</url-pattern>
    </servlet-mapping>
</web-app>